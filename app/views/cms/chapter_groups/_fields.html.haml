.control-group
  = f.label :title, class: 'control-label'
  .controls
    = f.text_field :title
.control-group
  = f.label :lecture_id, class: 'control-label'
  .controls
    = f.select :lecture_id, CMS::Lecture.all.collect {|r| [ r.title, r.id ] }
.control-group
  = f.label :position, class: 'control-label'
  .controls
    = f.select :position, 1.upto(f.object.order_scope.count + 1).to_a
.form-actions
  = f.submit 'Save', class: 'btn btn-primary', :'data-disable-with' => 'Saving...'
