.control-group
  = f.label :answer_keywords, class: 'control-label'
  .controls
    = f.text_field :answer_keywords
.control-group
  = f.label :question_text, class: 'control-label'
  .controls
    = f.text_area :question_text
.control-group
  = f.label :lecture_chapter_id, class: 'control-label'
  .controls
    = f.select :lecture_chapter_id, CMS::LectureChapter.all.collect {|r| [ r.title, r.id ] }
.form-actions
  = f.submit 'Save', class: 'btn btn-primary', :'data-disable-with' => 'Saving...'
