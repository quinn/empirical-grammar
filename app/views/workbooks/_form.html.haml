= form_for @workbook do |f|
  - if @workbook.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workbook.errors.count, "error")} prohibited this workbook from being saved:"
      %ul
        - @workbook.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
